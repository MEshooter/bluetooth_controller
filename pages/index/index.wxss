/* index.wxss */
page {
  width: 100vw; height: 100vh;
  overflow: hidden; background-color: #f0f2f5;
  position: relative; overscroll-behavior: none;
}

/* 1. Top Bar */
.top-bar {
  position: absolute; top: 0; left: 0; width: 100%; height: 40rpx;
  display: flex; justify-content: space-between; align-items: center;
  padding: 0 20rpx; background: rgba(255, 255, 255, 0.95);
  box-sizing: border-box; z-index: 100; border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.status-indicator { font-size: 18rpx; font-weight: bold; }
.input-wrapper { display: flex; align-items: center; }
.cmd-input { 
  border: 1rpx solid #ddd; background: #fff; width: 150rpx; height: 30rpx; min-height: 30rpx;
  border-radius: 15rpx; padding: 0 10rpx; font-size: 18rpx; margin-right: 10rpx;
}
.send-btn { 
  margin: 0 !important; font-size: 18rpx; height: 30rpx; line-height: 30rpx; 
  padding: 0 15rpx; border-radius: 15rpx; min-width: auto;
}

/* === 2. 搜索连接遮罩 === */
.connect-overlay {
  position: absolute; top: 0; left: 0; width: 100vw; height: 100vh;
  background: #f8f9fa; z-index: 999; 
  display: flex; justify-content: center; align-items: center;
}

.overlay-content { 
  width: 600rpx; 
  height: 280rpx; /* 父容器高度固定 */
  display: flex; 
  flex-direction: row; 
  background: #fff; 
  border-radius: 12rpx; 
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.1);
  padding: 20rpx; 
  box-sizing: border-box;
}

/* 左侧操作区 */
.scan-left {
  flex: 0.8; 
  display: flex; 
  flex-direction: column; 
  justify-content: center; 
  align-items: center;
  border-right: 1px solid #eee; 
  padding-right: 15rpx;
  height: 100%; /* 确保填满父容器 */
}
.overlay-title { font-size: 20rpx; margin-bottom: 20rpx; color: #333; font-weight: bold;}
.main-btn { width: 100% !important; height: 44rpx; line-height: 44rpx; font-size: 16rpx; border-radius: 22rpx; }
.debug-btn { margin-top: 20rpx; background: transparent; color: #aaa; font-size: 14rpx; border: none; padding: 0; }
.debug-btn::after { border: none; }

/* 右侧列表区 (关键修改) */
.scan-right { 
  flex: 1.2; 
  display: flex; 
  flex-direction: column; 
  padding-left: 15rpx;
  height: 100%; /* 关键：必须填满父容器高度 */
  overflow: hidden; /* 关键：防止内容溢出 */
}

.list-header { 
  font-size: 16rpx; 
  color: #999; 
  margin-bottom: 8rpx; 
  font-weight: bold; 
  flex-shrink: 0; /* 防止标题被压缩 */
}

.device-scroll { 
  flex: 1; /* 占据剩余空间 */
  height: 0; /* 关键技巧：Flex布局下设置为0，强制其根据 flex-grow 计算高度 */
  background: #fafafa; 
  border-radius: 6rpx; 
  border: 1px solid #eee; 
  padding: 6rpx;
  box-sizing: border-box;
}

.device-item { padding: 8rpx; border-bottom: 1px solid #eee; background: #fff; margin-bottom: 6rpx; border-radius: 4rpx; }
.dev-row { display: flex; justify-content: space-between; align-items: center; }
.dev-name { font-size: 14rpx; font-weight: bold; color: #333; }
.dev-rssi { font-size: 12rpx; color: #4caf50; font-weight: bold; }
.dev-id { font-size: 10rpx; color: #ccc; margin-top: 2rpx; }
.empty-tip { font-size: 12rpx; color: #ccc; text-align: center; margin-top: 30rpx; }

/* 3. Gamepad Pads */
.d-btn, .c-btn {
  position: absolute; width: 60rpx; height: 60rpx; line-height: 60rpx; text-align: center;
  border: 2rpx solid #d1d5db; color: #2196F3; font-weight: 800; font-size: 24rpx;
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1); z-index: 10; box-sizing: border-box;
}
.btn-hover { background: #e3f2fd; transform: scale(0.95); }

.left-pad {
  position: absolute; left: 60rpx; top: 55%; transform: translateY(-50%);
  width: 180rpx; height: 180rpx;
}
.left-pad .d-btn { border-radius: 10rpx; }
.btn-up { top: 0; left: 60rpx; }
.btn-left { top: 60rpx; left: 0; }
.btn-right { top: 60rpx; right: 0; }
.btn-down { bottom: 0; left: 60rpx; }

.joystick-base {
  width: 100%; height: 100%; border-radius: 50%;
  background: rgba(0,0,0,0.05); border: 2rpx solid #ccc; position: relative; box-sizing: border-box;
}
.joystick-knob {
  width: 80rpx; height: 80rpx; border-radius: 50%; background: #2196F3;
  position: absolute; top: 50%; left: 50%; margin-top: -40rpx; margin-left: -40rpx;
  box-shadow: 0 4rpx 10rpx rgba(33, 150, 243, 0.4);
}

.right-pad {
  position: absolute; right: 60rpx; top: 55%; transform: translateY(-50%);
  width: 180rpx; height: 180rpx;
}
.right-pad .c-btn { border-radius: 50%; }
.btn-top { top: 0; left: 60rpx; }
.btn-left2 { top: 60rpx; left: 0; }
.btn-right2 { top: 60rpx; right: 0; }
.btn-bottom { bottom: 0; left: 60rpx; }

/* 4. Center Pad */
.center-pad {
  position: absolute; top: 55%; left: 50%; transform: translate(-50%, -50%);
  display: flex; flex-direction: column; align-items: center;
  width: 220rpx; 
  z-index: 5;
}
.speed-container { width: 100%; display: flex; flex-direction: column; align-items: center; margin-bottom: 15rpx; }
.speed-label { font-size: 18rpx; color: #555; font-weight: bold; margin-bottom: 2rpx; }
.speed-slider { width: 95%; margin: 0; }

.center-btns { width: 100%; display: flex; flex-direction: column; gap: 15rpx; align-items: center; }
.switch-btn {
  width: 140rpx; height: 36rpx; line-height: 36rpx;
  text-align: center; border: 1px solid #b2ebf2; border-radius: 18rpx;
  color: #006064; background-color: #e0f7fa; font-weight: bold; font-size: 18rpx;
}
.row-btns { display: flex; flex-direction: row; gap: 20rpx; }
.small-btn {
  width: 60rpx; height: 30rpx; line-height: 28rpx; 
  text-align: center; border: 1px solid #ccc; border-radius: 15rpx;
  color: #666; font-size: 14rpx; background: #fff;
}
.exit-btn { color: #ff4d4f; border-color: #ffa39e; }

/* 5. Mini Console (底部缝隙) */
.mini-console {
  position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);
  width: 300rpx; height: 50rpx; 
  background: rgba(0,0,0,0.5); 
  border-top-left-radius: 8rpx; border-top-right-radius: 8rpx;
  padding: 5rpx 10rpx; box-sizing: border-box; 
  z-index: 10; pointer-events: auto;
}
.log-item {
  color: #0f0; font-size: 9rpx; font-family: monospace; line-height: 1.2; white-space: nowrap;
}